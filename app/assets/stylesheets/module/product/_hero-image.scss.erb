.hero-image {
  position: relative;
  background-image: image-url("main-content4.png");
  background-size: cover;
  background-position: 0 15%;
  width: 100vw;
  height: 390px;
  &-prev {
    position: absolute;
    top: 50%;
    left: 60px;
    color: #c0c0c0;
    font-size: 31px;
  }
  &-next {
    position: absolute;
    top: 50%;
    right: 60px;
    color: #c0c0c0;
    font-size: 31px;
  }
  &-dotbox {
    display: flex;
    justify-content: space-between;
    position: absolute;
  }
}
