#container
  %section.l-content-expanded
    %article.login
      = render partial: 'layouts/header-log'
      .login-main
        .login-main-header
          %p アカウントをお持ちでない方はこちら
          = link_to "/users/auth/facebook" do
            .login-main-header-signup
              %span 新規会員登録
        %ul.login-main-list
          = link_to "/users/auth/facebook" do
            %li.login-main-list-facebook.login-main-list-content
              %i.fab.fa-facebook-square.fa-2x
              %span Facebookでログイン
          = link_to "/users/auth/google_oauth2" do
            %li.login-main-list-google.login-main-list-content
              %i.fab.fa-google.fa-lg
              %span Googleでログイン
          = form_with model: @user, url: new_user_session_path, id: 'login-main-list-form', class: 'login-main-list-form', local: true do |f|
            %li
              = f.email_field :email, autofocus: true, autocomplete: "email",class: 'login-main-list-form-field'
            %li
              = f.password_field :password, autocomplete: "current-password",class: 'login-main-list-form-field'
            .login-main-list-form-checkbox
              = recaptcha_tags
            %div
              = f.submit 'ログイン', class: "login-main-list-form-submit"
        .login-main-list-form-text
          = link_to "/users/auth/google_oauth2" do
            %span パスワードをお忘れの方
      = render partial: 'layouts/signup-footer'
